@{
    ViewData["Title"] = "Sản Phẩm";
}

@model List<SanPham>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<br />

<table class="table">
    <tr>
        <th>Mã sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Loại sản phẩm</th>
        <th>Thương hiệu</th>
        <th>Nước sản xuất</th>
        <th>Kích thước</th>
        <th>Hình ảnh</th>
        <th>Giá</th>
        <th>Giới tính</th>
        <th>Số lượng</th>
        <th>Mô tả</th>
        <th>Mã khuyến mãi</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.masp</td>
            <td>@item.tensp</td>
            <td>@item.loaisp</td>
            <td>@item.thuongHieu</td>
            <td>@item.nuocsx</td>
            <td>@item.kichThuoc</td>
            <td>@item.hinhAnh</td>
            <td>@item.gia</td>
            <td>@item.gioiTinh</td>
            <td>@item.soLuong</td>
            <td>@item.moTa</td>
            <td>@item.makm</td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.masp }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.masp })
            </td>
        </tr>
    }
</table>
