@{
    ViewData["Title"] = "Khách Hàng";
}

<h5>@Html.ActionLink("Thêm mới", "Insert")</h5>

@model List<KhachHang>

<table class="table">
    <tr>
        <th>Mã khách hàng</th>
        <th>Họ tên</th>
        <th>Địa chỉ</th>
        <th>Số điện thoại</th>
        <th>Ngày sinh</th>
        <th>Ngày đăng ký</th>
        <th>Doanh số</th>
        <th>Username</th>
        <th>Password</th>
        <th>Loại tài khoản</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.makh</td>
            <td>@item.hoten</td>
            <td>@item.dchi</td>
            <td>@item.sodt</td>
            <td>@item.ngsinh</td>
            <td>@item.ngdk</td>
            <td>@item.doanhso</td>
            <td>@item.username</td>
            <td>@item.password</td>
            <td>@item.loaitk</td>
            <td>
                @*<a href="Update?id=@item.makh">Sửa</a>
                <a href="Delete?id=@item.makh">Xóa</a>*@
                @Html.ActionLink("Sửa", "Update", new { id = item.makh })
                @Html.ActionLink("Xóa", "Delete", new { id = item.makh })
            </td>
        </tr>
    }
</table>